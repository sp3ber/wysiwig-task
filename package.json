{
  "name": "wysiwig-task",
  "version": "1.0.0",
  "description": "## Задача",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint && tsc --noEmit",
    "test": "npm run test:jest --",
    "lint": "eslint . --cache --fix",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsninja-demos/wysiwig-task.git"
  },
  "keywords": [],
  "author": "m.shamshurin <m.shamshurin@tinkoff.ru>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jsninja-demos/wysiwig-task/issues"
  },
  "homepage": "https://github.com/jsninja-demos/wysiwig-task#readme",
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "@types/jest": "^26.0.20",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/lib/"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
